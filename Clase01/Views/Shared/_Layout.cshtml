<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navigation">
            <div class="menu">
                <a href="#">
                    <img class="menu-item" src="~/img/Imagen1.png" />
                </a>
                <a class="menu-item" href="#">Carreras</a>
                <a class="menu-item" href="#">Cursos Cortos</a>
                <a class="menu-item" href="#">Admisión & becas</a>
                <a class="menu-item" href="#">Estudiantes</a>
                <a class="menu-item" href="#">¿Por qué Cibertec?</a>
            </div>
        </nav>
    </header>
    <div class="img-principal">
        <img src="~/img/logo.cib.jpg" style="width:100%;" />

        <div class="texto-superpuesto">
            TU CARRERA EN 2 AÑOS
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Instituto de Educación Superior Privado Cibertec S.A.C</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
