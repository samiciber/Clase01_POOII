<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navigation">
            <div class="menu">
                <img class="menu-item" src="~/img/Imagen1.png" />
                <a class="menu-item" href="#">Carreras</a>
                <a class="menu-item" href="#">Cursos Cortos</a>
                <a class="menu-item" href="#">Admisión & becas</a>
                <a class="menu-item" href="#">Estudiantes</a>
                <a class="menu-item" href="#">¿Por qué Cibertec?</a>
            </div>
        </nav>
    </header>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/cib.jpg" alt="Primera imagen">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/cib2.jpg" alt="Segunda imagen">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Instituto de Educación Superior Privado Cibertec S.A.C</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
